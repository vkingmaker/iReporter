{
  "name": "ireport",
  "version": "1.0.0",
  "description": "IReport API is a used to raise a red flag or intervention to fight crime and corruption in Africa.",
  "repository": {
    "type": "git",
    "url": "https://github.com/vkingmaker/iReport.git"
  },
  "author": "Monday Victor Akubudike",
  "license": "MIT",
  "main": "app.js",
  "engines": {
    "node": ">=6.9.1",
    "npm": ">=3.10.0"
  },
  "scripts": {
    "start": "npm run build && node app",
    "clean": "rimraf dist",
    "build": "npm run clean && babel ./server/**/*.js --out-dir build --presets=es2015",
    "test": "npm run build && nyc mocha",
    "lint": "esw -w src test"
  },
  "dependencies": {
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "morgan": "^1.9.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.17.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-register": "^6.26.0",
    "chai": "^3.5.0",
    "chai-http": "^2.0.1",
    "dotenv": "^4.0.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.12.1",
    "nyc": "^13.1.0",
    "supertest": "^3.0.0",
    "webpack-cli": "^3.1.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "import"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ]
  }
}
